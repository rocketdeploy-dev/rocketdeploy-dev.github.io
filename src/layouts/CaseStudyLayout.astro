---
import BaseLayout from "./BaseLayout.astro";
import type { RouteKey, RouteParams } from "../i18n/routes";

type Props = {
  title: string;
  lang?: "pl" | "en";
  tags?: string[];
  routeKey?: RouteKey;
  routeParams?: RouteParams;
};

const {
  title,
  lang = "en",
  tags = [],
  routeKey,
  routeParams,
} = Astro.props as Props;
---

<BaseLayout lang={lang} title={title} routeKey={routeKey} routeParams={routeParams}>
  <div style="max-width: 78ch;">
    <div style="font-family: var(--mono); color: rgba(122,162,255,.85); font-size: 12px;">case study</div>
    <h1 style="margin-top:10px;">{title}</h1>

    {tags?.length ? (
      <div class="badges" style="margin: 10px 0 18px;">
        {tags.map((t) => <span class="badge">{t}</span>)}
      </div>
    ) : null}

    <div class="card" style="padding: 18px;">
      <slot />
    </div>

    <div style="margin-top: 18px;">
      <a href={lang === "pl" ? "/pl/case-studies/" : "/en/case-studies/"}>‚Üê back</a>
    </div>
  </div>
</BaseLayout>
