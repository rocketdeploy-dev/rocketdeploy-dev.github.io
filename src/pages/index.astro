---
const defaultLang = "en";
---

<!doctype html>
<html lang={defaultLang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="refresh" content="0; url=/en/" />
    <title>rocketdeploy</title>

    <script>
      (function () {
        try {
          const langs = (navigator.languages && navigator.languages.length)
            ? navigator.languages
            : [navigator.language || ""];

          const normalized = langs
            .filter(Boolean)
            .map(l => l.toLowerCase());

          const isPL = normalized.some(l => l === "pl" || l.startsWith("pl-"));

          // default: EN
          const target = isPL ? "/pl/" : "/en/";
          window.location.replace(target);
        } catch (e) {
          window.location.replace("/en/");
        }
      })();
    </script>

    <noscript>
      <style>
        body { background: #0b1020; color: rgba(255,255,255,.82); font-family: system-ui, sans-serif; padding: 24px; }
        a { color: rgba(122,162,255,.95); }
      </style>
    </noscript>
  </head>
  <body>
    <noscript>
      JavaScript is disabled. Open: <a href="/en/">English</a> or <a href="/pl/">Polski</a>.
    </noscript>
  </body>
</html>